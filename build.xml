<?xml version="1.0"?>
<project name="jSudoku" default="info">

  <property name="source" location="src"/>
  <property name="build" location="build"/>
  <property name="classes" location="${build}/classes"/>
  <property name="main-class" value="oyg.sudoku.CreateSudokuGUI"/>

  <target name="info">
    <echo>Ant project for jSudoku.</echo>
    <echo>Project address: ...</echo>
    <echo>Targets: ...</echo>
  </target>

  <target name="compile">
    <mkdir dir="${classes}"/>
    <javac 
      destdir="${classes}"
      includeantruntime="false"
      deprecation="true"
      listfiles="true"
      failonerror="true"
    >
      <compilerarg value="-Xlint:unchecked"/>
      <src path="${source}"/>
    </javac>
  </target>

  <target name="package" depends="compile">
    <jar 
      destfile="${build}/${ant.project.name}.jar"
      basedir="${classes}"
    >
      <manifest>
         <attribute name="Manifest-Version" value="1.0"/>
         <attribute name="Mainâ€“Class" value="${main-class}"/>      
      </manifest>
    </jar>
  </target>

  <target name="clean">
    <delete dir="${build}"/>
  </target>

  <!--target name="run" depends="package">
    
  
  </target-->

</project>

